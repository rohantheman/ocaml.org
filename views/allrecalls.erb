<h1 class="subtitle is-5 has-text-centered">All Recalls<h1>
<% @all_recalls.each do |x| %>
<div class="box">
<b><a href="/recalldetails/<%= x['recallId'] %>">Recall ID: </b><%= x['recallId'] %></a><br />
<b>Recall Title: </b><%= x['title'] %><br />
<b>Category: </b><%= x['category'] %><br />
<b>Date Published: </b> <%= Time.at(x['date_published']).to_datetime.to_s %><br />
<b>URL: </b> <%= x['url'] %><br />
</div>
<% end %>
